        script(src="/scripts/jquery.timepicker.min.js")
        script.
            $.modal.defaults.fadeDuration = 250;
        script(src="/scripts/toastr.min.js")
        script(src="/socket.io/socket.io.js")

        script(src="/scripts/utils.js")
        script(src="/scripts/dragndrop.js")
        script(src="/scripts/form-handler.js")
        script(src="/scripts/smartable.js")
        script(src="/scripts/fold.js")
        script(src="/scripts/modal.js")
        script(src="/scripts/widget.js")

        block scripts
    body
        include /pug/form.pug
        script.
            global = !{JSON.stringify(global)}
        block content
